<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:centerColor="#60a133" android:endColor="#97d46d" android:startColor="#97d46d" />

            <stroke android:width="0.0dip" android:color="#b8b8b8" />

            <corners android:radius="4dip" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="90" android:endColor="#69db90" android:startColor="#b6db69" />

            <stroke android:width="0.0dip" android:color="#b8b8b8" />

            <corners android:radius="4dip" />
        </shape></item>
    <item><shape>
            <gradient android:angle="90" android:endColor="#41d465" android:startColor="#9de76a" />

            <stroke android:width="0.0dip" android:color="#b8b8b8" />

            <corners android:radius="4dip" />

            <item/>
        </shape></item>

</selector>